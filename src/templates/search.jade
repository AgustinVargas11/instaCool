doctype html
html(lang="en")
	head
		title InstaCool
		link(rel="stylesheet", href="/static/css/main.css")
		link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Amatic+SC|Handlee|Quattrocento|Muli', type='text/css')
		script(src="https://use.fontawesome.com/58f42e8f0d.js")
	body
		form
			img.profilepic(src="#{profilePicture}")
			h1(id="head") #{userName}
			hr
			a(href='')
			h3 Most Popular Photo
			a(href="#{mostLikedPhotoLink}")
					img.mostlikedpic(src="#{mostLikedPhoto}")
			p.overlay 
				i.fa.fa-heart.fa-lg
				p.overlay-text #{mostLikes}
			.content
				p #{mostLikedPhotoCaption}
				
				h3 Total Account Likes
				p #{likes}
				h3 Total Account Comments
				p #{comments}
				
				a(href="/")
					h3.search Search again
	script(src="/static/js/script.js")
		

			
			
	